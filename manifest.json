{
  "manifest_version": 2,
  "name": "表单助手",
  "version": "1.2",
  "description": "根据正则随机填充表单元素内容",
  "icons": {
    "16": "images/icon16.png"
  },
  "content_scripts": [{
    "matches": ["*://*/*"],
    "js": ["embed.js"]
  }],
  "browser_action": {
    "default_icon": {
      "19": "images/icon16.png"
    },
    "default_title": "autoinput",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "commands": {
    "clear-content": {
      "suggested_key": {
        "default": "Ctrl+Shift+M",
        "mac": "Command+Shift+M"
      },
      "description": "清除表单内容"
    },
    "fill-all": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "Command+Shift+A"
      },
      "description": "填充所有表单元素"
    },
    "fill-required": {
      "suggested_key": {
        "default": "Ctrl+Shift+Z",
        "mac": "Command+Shift+Z"
      },
      "description": "填充必填表单元素"
    }

  },
  "permissions": [
    "tabs", "*://*/*"
  ]
}
